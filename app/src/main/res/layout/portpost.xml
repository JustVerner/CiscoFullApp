<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/portTextView"
        android:layout_width="175dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:maxLines="90"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/portpls"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="33dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/portpls"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_gravity="left"
        android:text="Get ports"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/portGet"
        tools:layout_constraintBaseline_creator="1"
        android:layout_marginRight="16dp" />

    <Button
        android:id="@+id/portGet"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_gravity="right"
        app:layout_constraintRight_toLeftOf="@+id/portpls"
        android:text="Get networks"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="153dp" />

    <Button
        android:id="@+id/insertDatabase"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_gravity="right"
        android:text="Insert database"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="78dp"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/portpls"
        android:layout_marginTop="75dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/portpls"
        app:layout_constraintTop_toTopOf="@+id/portGet"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/returnButton"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_gravity="right"
        tools:layout_editor_absoluteY="182dp"
        tools:layout_editor_absoluteX="117dp" />


</android.support.constraint.ConstraintLayout>